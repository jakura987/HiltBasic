<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 蓝牙连接（启动 packed 链式布局） -->
    <Button
        android:id="@+id/blueToothConnection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="蓝牙连接"
        android:layout_marginVertical="8dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- 授权 -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="授权"
        android:layout_marginVertical="8dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blueToothConnection"
        app:layout_constraintBottom_toTopOf="@+id/retrofit_btn" />

    <!-- retrofit -->
    <Button
        android:id="@+id/retrofit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RETROFIT"
        android:layout_marginVertical="8dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintBottom_toTopOf="@+id/waveDemo_btn" />

    <!-- 波形消失demo -->
    <Button
        android:id="@+id/waveDemo_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="波形消失DEMO"
        android:layout_marginVertical="8dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/retrofit_btn"
        app:layout_constraintBottom_toTopOf="@+id/analyzer_btn" />

    <!-- 分析器 -->
    <Button
        android:id="@+id/analyzer_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="分析器"
        android:layout_marginVertical="8dp"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waveDemo_btn"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- wifiAP -->
    <Button
        android:id="@+id/wifiAP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="WiFiAP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/analyzer_btn"
        app:layout_constraintVertical_bias="0.118"
        app:layout_constraintWidth_percent="0.33" />

</androidx.constraintlayout.widget.ConstraintLayout>
